<Window x:Class="YoloAnnotator.ColorSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="选择颜色"
        Width="320" Height="380"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{StaticResource BackgroundBrush}">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="请选择颜色" FontSize="14" Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,12"/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <ItemsControl Name="ColorList">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Button Click="ColorButton_Click" Tag="{Binding}"
                                Width="280" Height="36" Margin="0,0,0,4"
                                Padding="12,0" HorizontalContentAlignment="Left"
                                Background="{StaticResource SurfaceBrush}" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}"
                                            CornerRadius="3"
                                            Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                        VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="{StaticResource HoverBrush}"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                            <Grid>
                                <Border Width="24" Height="24" Background="{Binding}" CornerRadius="3"
                                        BorderBrush="#999" BorderThickness="1" VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding}" Margin="36,0,0,0"
                                          Foreground="{StaticResource TextPrimaryBrush}" VerticalAlignment="Center" FontSize="12"/>
                            </Grid>
                        </Button>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Content="取消" Width="80" Height="30" Margin="0,0,8,0"
                    Background="#4d4d4d" Foreground="#e5e5e5" BorderThickness="0"
                    Click="CancelButton_Click"/>
            <Button Content="确定" Width="80" Height="30" 
                    Background="#3b82f6" Foreground="#ffffff" BorderThickness="0"
                    Click="OKButton_Click"/>
        </StackPanel>
    </Grid>
</Window>