<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="YoloAnnotator.ShapeEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="形状标注工具" Height="700" Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BackgroundBrush}">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="250"/>
        </Grid.ColumnDefinitions>

        <!-- 左侧工具栏 -->
        <Border Grid.Column="0" Background="{StaticResource SidebarBrush}" 
                BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,1,0">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="10">
                    <TextBlock Text="标注工具" Style="{StaticResource TitleTextStyle}" Margin="0,0,0,15"/>

                    <!-- 工具选择 -->
                    <GroupBox Header="绘制工具" Style="{StaticResource GroupBoxStyle}" Margin="0,0,0,10">
                        <StackPanel>
                            <RadioButton x:Name="RbRectangle" Content="矩形 (R)" GroupName="Tool" 
                                       IsChecked="True" Margin="0,5" Click="Tool_Click"/>
                            <RadioButton x:Name="RbRotation" Content="旋转框 (O)" GroupName="Tool" 
                                       Margin="0,5" Click="Tool_Click"/>
                            <RadioButton x:Name="RbPolygon" Content="多边形 (P)" GroupName="Tool" 
                                       Margin="0,5" Click="Tool_Click"/>
                            <RadioButton x:Name="RbCircle" Content="圆形 (C)" GroupName="Tool" 
                                       Margin="0,5" Click="Tool_Click"/>
                            <RadioButton x:Name="RbLine" Content="线段 (L)" GroupName="Tool" 
                                       Margin="0,5" Click="Tool_Click"/>
                            <RadioButton x:Name="RbPoint" Content="点 (T)" GroupName="Tool" 
                                       Margin="0,5" Click="Tool_Click"/>
                        </StackPanel>
                    </GroupBox>

                    <!-- 编辑工具 -->
                    <GroupBox Header="编辑工具" Style="{StaticResource GroupBoxStyle}" Margin="0,0,0,10">
                        <StackPanel>
                            <Button Content="编辑选中形状" Click="BtnEdit_Click" 
                                  Style="{StaticResource SecondaryButtonStyle}" Margin="0,5"/>
                            <Button Content="删除选中形状" Click="BtnDelete_Click" 
                                  Style="{StaticResource DangerButtonStyle}" Margin="0,5"/>
                            <Button Content="复制形状" Click="BtnCopy_Click" 
                                  Style="{StaticResource SecondaryButtonStyle}" Margin="0,5"/>
                            <Button Content="清空所有" Click="BtnClear_Click" 
                                  Style="{StaticResource DangerButtonStyle}" Margin="0,5"/>
                        </StackPanel>
                    </GroupBox>

                    <!-- 显示选项 -->
                    <GroupBox Header="显示选项" Style="{StaticResource GroupBoxStyle}">
                        <StackPanel>
                            <CheckBox x:Name="ChkShowLabels" Content="显示标签" IsChecked="True" 
                                    Margin="0,5" Checked="Display_Changed" Unchecked="Display_Changed"/>
                            <CheckBox x:Name="ChkShowConfidence" Content="显示置信度" IsChecked="True" 
                                    Margin="0,5" Checked="Display_Changed" Unchecked="Display_Changed"/>
                            <CheckBox x:Name="ChkFillShapes" Content="填充形状" IsChecked="False" 
                                    Margin="0,5" Checked="Display_Changed" Unchecked="Display_Changed"/>
                        </StackPanel>
                    </GroupBox>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- 中间画布区域 -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- 顶部工具栏 -->
            <Border Grid.Row="0" Background="{StaticResource SidebarBrush}" 
                    BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,0,1" Padding="10">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="图片：" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <TextBlock x:Name="TxtImageName" Text="未加载" VerticalAlignment="Center" 
                             FontWeight="Bold" Margin="0,0,20,0"/>
                    <Button Content="加载图片" Click="BtnLoadImage_Click" 
                          Style="{StaticResource SecondaryButtonStyle}" Margin="0,0,10,0"/>
                    <Button Content="保存标注" Click="BtnSave_Click" 
                          Style="{StaticResource PrimaryButtonStyle}" Margin="0,0,10,0"/>
                    <Button Content="导出" Click="BtnExport_Click" 
                          Style="{StaticResource SecondaryButtonStyle}"/>
                </StackPanel>
            </Border>

            <!-- 画布 -->
            <Border Grid.Row="1" Background="#1E1E1E" Margin="5">
                <ScrollViewer x:Name="ScrollViewer" HorizontalScrollBarVisibility="Auto" 
                            VerticalScrollBarVisibility="Auto">
                    <Canvas x:Name="MainCanvas" 
                          MouseLeftButtonDown="Canvas_MouseLeftButtonDown"
                          MouseMove="Canvas_MouseMove"
                          MouseLeftButtonUp="Canvas_MouseLeftButtonUp"
                          MouseRightButtonDown="Canvas_MouseRightButtonDown"
                          Background="Transparent">
                        <Image x:Name="ImageDisplay" Stretch="None"/>
                    </Canvas>
                </ScrollViewer>
            </Border>

            <!-- 底部状态栏 -->
            <Border Grid.Row="2" Background="{StaticResource SidebarBrush}" 
                    BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,1,0,0" Padding="10,5">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock x:Name="TxtStatus" Text="就绪" VerticalAlignment="Center"/>
                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <TextBlock Text="缩放：" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <Slider x:Name="SliderZoom" Width="150" Minimum="0.1" Maximum="5" Value="1" 
                              TickFrequency="0.1" ValueChanged="SliderZoom_ValueChanged"/>
                        <TextBlock x:Name="TxtZoom" Text="100%" VerticalAlignment="Center" 
                                 Width="50" Margin="5,0,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <!-- 右侧形状列表 -->
        <Border Grid.Column="2" Background="{StaticResource SidebarBrush}" 
                BorderBrush="{StaticResource BorderBrush}" BorderThickness="1,0,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="标注列表" Style="{StaticResource TitleTextStyle}" 
                         Margin="10,10,10,15"/>

                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <ListBox x:Name="ShapesList" 
                           Background="Transparent" 
                           BorderThickness="0"
                           SelectionChanged="ShapesList_SelectionChanged"
                           Margin="10,0">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Background="{StaticResource CardBrush}" 
                                      BorderBrush="{StaticResource BorderBrush}" 
                                      BorderThickness="1" 
                                      CornerRadius="5" 
                                      Padding="10" 
                                      Margin="0,5">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <TextBlock Grid.Row="0" Text="{Binding Label}" 
                                                 FontWeight="Bold" FontSize="14"/>
                                        <TextBlock Grid.Row="1" Text="{Binding ShapeType}" 
                                                 Foreground="{StaticResource SecondaryTextBrush}" 
                                                 FontSize="12" Margin="0,2,0,0"/>
                                        <TextBlock Grid.Row="2" Foreground="{StaticResource SecondaryTextBrush}" 
                                                 FontSize="11" Margin="0,2,0,0">
                                            <Run Text="点数: "/>
                                            <Run Text="{Binding Points.Count}"/>
                                        </TextBlock>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</Window>
